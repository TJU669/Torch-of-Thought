page{
  color: #000;
  padding: 10rpx;
}

.head{
  display: flex;
  flex-direction: row;
}

.left_blank {
   flex: 1;
   align-items:center;
}
 
/* 跳转到视频页的按钮 */
.btn{
  font-size: 35rpx;
  margin-top: 85rpx;
  position: relative;
  align-items:center;
}

/* 新闻列表 */
.main{
  display: flex;
  flex-wrap: wrap; 
  margin-top: 30rpx;
  justify-content: space-between;
}

.news_item{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #e9e9e9
}

.news_img_wrap{
  width: 38%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.news_img_wrap image{
  width: 90%;
  border-radius: 15rpx;
}

.news_info{
  width: 60%;
}

.news_title{
  font-size: 35rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 18rpx;
}

.news_date{
  font-size: 28rpx;
  color: #bdbebd;
  margin-bottom: 10rpx;
  display: flex;
}