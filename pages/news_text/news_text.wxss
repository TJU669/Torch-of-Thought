page{
  color: #000;
  padding: 10rpx;
}

.head{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  opacity: 0.9;
}

.middle_blank {
   flex: 1;
   align-items:center;
}

 
/* 跳转到视频页的按钮 */
.btn{
  font-size: 35rpx;
  margin-top: 85rpx;
  position: relative;
  align-items:center;
}

/* 新闻列表 */
.main{
  display: flex;
  flex-wrap: wrap; 
  justify-content: space-between;
  position: relative;
  background-color: #F5F5F5;
}

