.news_item{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #e9e9e9;
}

.news_img_wrap{
  width: 38%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.news_img_wrap image{
  width: 90%;
  border-radius: 15rpx;
}

.news_info{
  width: 60%;
}

.news_title{
  font-size: 35rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 18rpx;
  margin-right:35rpx
}

.news_date{
  font-size: 28rpx;
  color: #bdbebd;
  margin-bottom: 10rpx;
  display: flex;
}