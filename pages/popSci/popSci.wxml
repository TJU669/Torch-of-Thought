<!-- 疫情科普列表页 -->
<Tabs tabs="{{tabs}}" binditemChange="handleItemChange"></Tabs>
<view class="qqcontainer">
<image class="bkg" mode='widthFix' src="../image/tx_bkg.jpg"></image>
    <view class="video_wrap">
        <view wx:for="{{videoList}}" wx:key="id">
            <!-- 图片容器 -->
            <view class="image_container">
                <!-- 图片 -->
                <navigator url="../videoPlay/videoPlay?vid={{item.id}}">
                    <image style="border-radius:8px" mode='widthFix' src="{{item.pic}}"></image>
                </navigator>
                <!-- 标题 -->
                <view class="title">{{item.title}}</view>
            </view>
        </view>
    </view>
</view>