<Tabs tabs="{{tabs}}" binditemChange="handleItemChange"></Tabs>
<view class="head">
  <text decode='true' class="btn" style="width:200rpx" bindtap="news_video2text">&lt; 要闻首页</text>
  <text class="right_blank"></text>
</view>

<view class="main">
  <!-- 视频列表 -->
  <view class="video_wrap">
    <navigator url="../videoPlay/videoPlay?vid={{item.id}}" class="video_item" wx:for="{{videoList}}" wx:key="index">
      <!-- 图片容器 -->
      <view class="video_img_wrap">
        <image src="{{item.pic}}" mode="widthFix"></image>
      </view>
      <!-- 视频标题 -->
      <view class="video_title">
        {{item.title}}
      </view>
    </navigator>
  </view>
</view>