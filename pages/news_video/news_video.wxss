page{
  color: #000;
  padding: 10rpx;
  background-color: #f6f6f6
}


.head{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
  opacity: 0.9;
}

.right_blank {
   flex: 1;
   align-items:center;
}
 
/* 跳转到视频页的按钮 */
.btn{
  font-size: 35rpx;
  margin-top: 85rpx;
  position: relative;
  align-items:center;
}

/* 视频列表 */
.main{
  display: flex;
  flex-wrap: wrap; 
  justify-content: space-between;
  background-color: #F5F5F5;
}

.video_item{
  /* background-color: #fff; */
  /* border: 4rpx outset rgb(218, 213, 216); */
  border-top: 4rpx solid #dddada;
  border-bottom: 6rpx solid #cfcdcd;
  border-radius: 3%;
  margin-bottom: 10rpx;
  background-color: #F5F5F5;
}

.content{
  height: 50%;
  display: flex;
  justify-content: space-between;
  margin-bottom:20rpx;
  margin-top: 20rpx;
  /* background-color: #F5F5F5; */
}

/* .video_wrap{
  background-color: #F5F5F5;
} */

.video_img_wrap{
  width: 35%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video_img_wrap image{
  width: 90%;
  border-radius: 15rpx;
}

.video_title{
  width: 62%;
  font-size: 31rpx;
  margin-right:30rpx;
  margin-bottom: 30rpx
}