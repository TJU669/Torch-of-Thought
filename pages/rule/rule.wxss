/* pages/rule/rule.wxss */
.bkg{
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
    top:0;
    left:0;
    /*透明度*/
    opacity: 0.9;
}

.title{
    /* 边框 */
    position:fixed;
    margin-left: 50rpx;
    margin-right: 50rpx;
    margin-top: 13%;
    height: 100rpx;
    width: 650rpx;
    border-radius:30rpx; 

    /* 文字 */
    color: #CD5C5C;
    text-align: center;
    font-size:xx-large;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 50rpx;
}


.frame{
    position:fixed;
    margin-left: 50rpx;
    margin-right: 50rpx;
    /* margin-top: 250rpx; */
    margin-top: 30%;
    height: 75%;
    width: 650rpx;
    
    background-color: #DCDCDC;
    /* text-align: center; */
    /* line-height: 30rpx; */
    opacity: 0.6;
    border-radius:30rpx;
}

.text{
    /* padding-inline: 20rpx; */
    margin-top: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    white-space:pre-line;
    /* font-size: large; */
    font-weight: bold;
    color: #000080;
    line-height:30px;
}